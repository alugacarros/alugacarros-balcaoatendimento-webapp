@using AlugaCarros.BalcaoAtendimento.WebApp.Mvc.Models.User
@model UserLogin
@{
    ViewData["Title"] = "Login de usuário";
}

<section class="section-conten padding-y container" style="min-height:35vh">

    <vc:Summary></vc:Summary>

    <div class="card mx-auto" style="max-width: 430px; margin-top: 100px;">

        <div class="card-body">
            <h3 class="card-title mb-4 text-center">Sistema Balcão Atendimento</h3>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AgencyId"></label>
                    <select asp-for="AgencyId" class="form-control form-select">
                        <option value="">Selecione uma agência</option>
                        @foreach (var agency in Model.Agencies)
                        {
                            <option value="@agency.AgencyCode">@agency.AgencyName</option>
                        }
                    </select>
                    <span asp-validation-for="AgencyId" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group d-flex flex-column">
                    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
